<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

	<div class="book-title">
		Title<br>
		<%= f.text_field :title %>
	</div>

	<div class="book-body">
		Body<br>
		<%= f.text_area :body %>
	</div>

	<div class="book-action">
		<%= f.submit "Update Book" %>
	</div>

<% end %>

<%= link_to "Show", book_path(@book), class: "edit_#{params[:id]}" %> | 
<%= link_to "Back", books_path, class: "back"%>