<%= render 'devise/shared/header' %>

<div class="container">
      <div class="row">
          <!-- 以下を追加 -->
          <div class="col-lg-3"> 
              <h2>User info</h2>
              <%= form_for(current_user, url: user_path(current_user.id), html: { method: :put }) do |f| %>
                <div class="field">
              	  <%= f.label :Name %><br />
              	  <%= f.text_field :username %>
                </div>

                <div class="field">
                  <%= f.label :Image %><br />
                  <%= f.attachment_field :image, autofocus: true, :class => "ignore" %>
                </div>

                <div class="field">
              	  <%= f.label :Introduction %><br />
              	  <%= f.text_area :introduction %>
                </div>
              	<%= f.submit "Update User" %>
              <% end %>
          </div>
      </div>
</div>

<%= render 'devise/shared/footer' %>