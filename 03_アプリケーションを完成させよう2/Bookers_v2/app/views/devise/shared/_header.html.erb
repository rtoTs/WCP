<!-- 下記に条件分岐で遷移してきた時のコメントを入れる -->
<header>
  <div class="notice">
    <% if flash[:notice].present? then %>
      notice: 
      <%= flash[:notice] %>
    <% end %>
  </div>

    <div class="error">
    <% if flash[:error].present? then %>
      error: 
      <%= flash[:error] %>
    <% end %>
  </div>

  <div class="user-error">
  <% if defined? @user %>
    <% if @user.errors.any? %>
      user error:<br>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
  </div>

  <div class="book-error">
  <% if defined? @book %>
    <% if @book.errors.any? %>
      book error:<br>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
  </div>
</header>